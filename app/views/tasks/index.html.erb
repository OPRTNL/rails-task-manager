<h1>My Tasks</h1>


<% @tasks.each do |task| %>
  <p><% if task.completed == true %>
   <input type='checkbox' checked disabled>
   <% else %>
    <input type='checkbox' disabled>
  <% end %>
  <%= link_to task.title, task_path(task) %></p>
<% end %>

<a href="tasks/new"> create a task </a>
<%= link_to 'create a task', new_path %></p>
